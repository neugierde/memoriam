<h1>Taxons</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @taxons.each do |taxon| %>
        <tr>
            <td><%= taxon.full_name %></td>
            <td>
                <%= link_to icon('eye'), taxon %>
                <%= link_to icon('pen'), edit_taxon_path(taxon) %>
                <%= link_to icon('trash'), taxon, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Taxon', new_taxon_path %>